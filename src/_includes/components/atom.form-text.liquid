{% comment %}
{% include atom.form-text.html id="text-input" placeholder="E.g. placeholder text" label="Label" optional="Optional" %}
{% endcomment %}
<p class="c-field">
  <label for="{{ id }}" class="c-label">
    {{ label }}{% if optional %}<span class="c-badge c-badge--negative">{{ optional }}</span>{% endif %}
  </label>
  <input id="{{ id }}" type="text"{% if placeholder %} placeholder="{{ placeholder }}"{% endif %} class="c-input" />
</p>
