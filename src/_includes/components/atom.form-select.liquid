{% comment %}
{% include atom.form-select.html id="select" label="Label" dataset="site.data.countries" optional="Optional" %}
{% endcomment %}
<fieldset class="c-fieldset">
    <p class="c-field">
      <label for="{{ id }}" class="c-label">
        {{ label }}{% if optional %}<span class="c-badge c-badge--negative">{{ optional }}</span>{% endif %}
      </label>
      <span class="c-select">
        <select id="{{ id }}">
          <option value=""></option>
          {% for item in dataset %}
          <option value="{{ item.title}}">{{ item.title}}</option>
          {% endfor %}
        </select>
      </span>
    </p>
  </fieldset>
