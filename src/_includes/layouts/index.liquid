---
layout: default
---

<section class="o-row-large s-theme-primary">
  <div class="o-wrapper">
    <h2>Cards</h2>
    <ul class="o-layout">
      {% for item in cards %}
      <li class="o-layout__item u-1/2@medium">
        {% include "components/molecule.card.liquid" image:item.image title:item.title body:item.body footnote:item.footnote %}
      </li>
      {% endfor %}
    </ul>
  </div>
</section>

<section class="o-row-large s-theme-white u-divider">
  <div class="o-wrapper">
    <h2>Tabs</h2>
    {% include "components/organism.tabs.liquid" %}
  </div>
</section>

<section class="o-row-large s-theme-white u-divider">
  <div class="o-wrapper">
    <h2>Collapsed sections</h2>
    {% include "components/organism.collapsed-sections.liquid" %}
  </div>
</section>

<section class="o-row-large s-theme-white u-divider">
  <div class="o-wrapper">
    <h2>Menu button</h2>
    {% include "components/organism.menu.liquid" %}
  </div>
</section>

<section class="o-row-large s-theme-white u-divider">
  <div class="o-wrapper">
    <h2>Tooltips</h2>
    {% include "components/organism.tooltips.liquid" %}
  </div>
</section>

<section class="o-row-large s-theme-white u-divider">
  <div class="o-wrapper">
    <h2>Toggle tips</h2>
    {% include "components/organism.toggletips.liquid" %}
  </div>
</section>

<section class="o-row-large s-theme-neutral-xxlight">
  <div class="o-wrapper">
    <h2>Forms</h2>
    <form action="#!" class="c-form">
      <div role="status" aria-live="polite">
        <!-- Add status messages here -->
      </div>
      <fieldset class="c-fieldset">
        <legend class="c-legend">Title</legend>
        {% include "components/atom.form-text.liquid" id:"text-input" placeholder:"E.g. placeholder text" label:"Label" optional="Optional" %}
        {% include "components/atom.form-textarea.liquid" id:"text-area" placeholder:"E.g. placeholder text" label:"Label" %}
      </fieldset>
      <fieldset class="c-fieldset">
        {% include "components/atom.form-select.liquid" id:"select" label:"Label" dataset:site.data.countries %}
      </fieldset>
      <fieldset>
        {% include "components/atom.form-checkbox.liquid" id:"checkbox" label:"Label" optional:"Optional" %}
      </fieldset>
      <button role="submit" class="c-btn c-btn--primary c-btn--large">Send</button>
    </form>
  </div>
</section>

{% comment %} {% include "components/organism.hero.liquid" %} {% endcomment %}
